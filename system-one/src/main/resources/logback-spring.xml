<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--  可用配置 ch.qos.logback.classic.PatternLayout : defaultConverterMap -->
            <pattern>%highlight(​[%-5p]) %black([%d{yyyy-MM-dd HH:mm:ss.SSS}]) %cyan([%thread]) %red([%c{1}:%M:%L]) %m%n</pattern>
        </encoder>
    </appender>

    <!--显示日志-->
    <logger name="org.springframework.jdbc.core" additivity="false" level="DEBUG" >
        <appender-ref ref="console" />
    </logger>

    <!-- 日志输出级别 -->
    <root level="INFO">
        <appender-ref ref="console"/>
    </root>
</configuration>